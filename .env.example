# BookReview Application Environment Variables
# Copy this file to .env and update the values as needed

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# MongoDB connection string
# For local development with Docker Compose
MONGO_URI=mongodb://localhost:27017
# For production or remote MongoDB
# MONGO_URI=mongodb://username:password@host:port/database

# MongoDB database name
DB_NAME=bookreview_dev

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Rocket framework configuration
ROCKET_ADDRESS=0.0.0.0
ROCKET_PORT=8000

# Application environment (development, staging, production)
ROCKET_ENV=development

# =============================================================================
# REVERSE PROXY CONFIGURATION
# =============================================================================

# Whether the application should serve static files directly
# Set to 'false' when behind a reverse proxy (Apache, Nginx, etc.)
# Set to 'true' for development or when no reverse proxy is used
SERVE_STATIC_FILES=true

# =============================================================================
# FILE UPLOAD CONFIGURATION
# =============================================================================

# Directory where uploaded files (book covers, author images) will be stored
# This should be an absolute path or relative to the application working directory
UPLOADS_DIR=uploads

# Maximum file size for uploads (in bytes)
# Default: 10MB (10 * 1024 * 1024)
MAX_UPLOAD_SIZE=10485760

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Secret key for session management (generate a random string for production)
# SECRET_KEY=your-secret-key-here

# CORS allowed origins (comma-separated list)
# CORS_ORIGINS=http://localhost:3000,https://yourdomain.com

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log level (error, warn, info, debug, trace)
RUST_LOG=info

# Enable backtrace for debugging
RUST_BACKTRACE=0

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================

# Enable hot reloading for templates in development
# TEMPLATE_RELOAD=true

# Enable SQL query logging
# DB_LOG_QUERIES=false

# =============================================================================
# PRODUCTION CONFIGURATION
# =============================================================================

# Number of worker threads for the application
# ROCKET_WORKERS=4

# Keep-alive timeout in seconds
# ROCKET_KEEP_ALIVE=5

# =============================================================================
# DOCKER CONFIGURATION
# =============================================================================

# These variables are typically set by Docker Compose
# but can be overridden if needed

# Internal MongoDB connection for Docker Compose
# MONGO_URI=mongodb://mongo:27017

# Application port inside Docker container
# ROCKET_PORT=8000

# Uploads directory inside Docker container
# UPLOADS_DIR=/app/uploads
